{
  "manifest_version": 3,
  "name": "Kuma the Research Bear",
  "version": "1.0.0",
  "description": "A bear that helps you understand research papers using Chrome's built-in AI",
  "permissions": [
    "activeTab",
    "storage",
    "sidePanel",
    "offscreen",
    "contextMenus"
  ],
  "host_permissions": [
    "https://arxiv.org/*",
    "https://www.ncbi.nlm.nih.gov/pmc/*",
    "https://*.biorxiv.org/*",
    "https://scholar.google.com/*",
    "https://papers.ssrn.com/*",
    "https://pubmed.ncbi.nlm.nih.gov/*",
    "<all_urls>"
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "128": "icons/icon128.png",
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png"
    }
  },
  "background": {
    "service_worker": "src/background/background.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://arxiv.org/*",
        "https://www.ncbi.nlm.nih.gov/pmc/*",
        "https://*.biorxiv.org/*",
        "https://scholar.google.com/*",
        "https://papers.ssrn.com/*",
        "https://pubmed.ncbi.nlm.nih.gov/*",
        "file:///*",
        "<all_urls>"
      ],
      "js": ["src/content/content.ts"],
      "css": ["src/content/content.css", "src/styles/globals.css"],
      "match_about_blank": true
    }
  ],
  "side_panel": {
    "default_path": "src/sidepanel/sidepanel.html"
  },
  "icons": {
    "128": "icons/icon128.png",
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "pdf.worker.min.mjs",
        "ort-wasm-simd-threaded.wasm",
        "ort-wasm-simd-threaded.jsep.wasm",
        "ort-wasm-simd-threaded.mjs",
        "ort-wasm-simd-threaded.jsep.mjs",
        "src/content/components/chatbox.css",
        "src/content/styles/askKumaButton.css",
        "src/content/styles/selectionToolbar.css",
        "src/content/styles/imageExplainButton.css",
        "src/content/styles/pdfCaptureButton.css",
        "lotties/*",
        "icons/*"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
  }
}
