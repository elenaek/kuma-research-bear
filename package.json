{
  "name": "kuma-research-bear",
  "version": "0.5.0",
  "description": "Chrome extension that explains research papers using built-in AI",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build && node scripts/fix-underscore-files.js",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "generate-icons": "node scripts/resize-icons.cjs",
    "generate-icon-variants": "node scripts/generate-icon-variants.cjs"
  },
  "keywords": [
    "chrome-extension",
    "research-papers",
    "ai",
    "explanation"
  ],
  "author": "elenaek",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/elenaek/kuma-research-bear.git"
  },
  "homepage": "https://github.com/elenaek/kuma-research-bear#readme",
  "bugs": {
    "url": "https://github.com/elenaek/kuma-research-bear/issues"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "4.1.14",
    "@types/chrome": "0.0.268",
    "@types/dompurify": "3.0.5",
    "@types/node": "20.12.7",
    "prettier": "3.6.2",
    "sharp": "0.34.4",
    "terser": "5.44.0",
    "typescript": "5.4.5",
    "vite": "5.2.10",
    "vite-plugin-static-copy": "3.1.4",
    "vite-plugin-web-extension": "4.1.6"
  },
  "dependencies": {
    "@huggingface/transformers": "3.1.2",
    "@lottiefiles/dotlottie-web": "0.54.1",
    "@preact/preset-vite": "2.10.2",
    "autoprefixer": "10.4.21",
    "dompurify": "3.3.0",
    "lucide-preact": "0.546.0",
    "marked": "16.4.0",
    "mathjax-full": "3.2.2",
    "okapibm25": "1.4.1",
    "pdfjs-dist": "5.4.296",
    "postcss": "8.5.6",
    "preact": "10.27.2",
    "tailwindcss": "4.1.14"
  }
}
